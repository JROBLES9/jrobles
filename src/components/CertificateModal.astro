<div id="certificate-modal" class="fixed inset-0 z-50 hidden flex items-center justify-center p-4 md:p-6 lg:p-8 overflow-y-auto">
  <div class="modal-content rounded-lg shadow-2xl w-full max-w-5xl max-h-[90vh] md:max-h-[85vh] overflow-hidden opacity-0 scale-95 transition-all duration-300 flex flex-col">
    <!-- Encabezado del modal -->
    <div class="flex justify-between items-center p-4 md:p-6 border-b border-[#3282B8]/30 sticky top-0 bg-[#0F4C75] z-10">
      <h3 id="modal-certificate-title" class="text-xl md:text-2xl font-bold text-[#BBE1FA] truncate pr-4">Título del Certificado</h3>
      <div class="flex items-center gap-2">
        <span id="modal-certificate-date" class="hidden md:inline-block bg-[#3282B8] text-[#BBE1FA] text-xs px-2 py-1 rounded">Fecha</span>
        <button id="close-modal" class="text-[#BBE1FA] hover:text-white p-1 rounded-full hover:bg-[#1B262C]/30 transition-colors duration-200" aria-label="Cerrar">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Contenido del modal -->
    <div class="flex-grow overflow-y-auto p-4 md:p-6">
      <div class="grid md:grid-cols-2 gap-6">
        <!-- Imagen del certificado -->
        <div class="certificate-image-container bg-[#1B262C] rounded-lg p-2 flex items-center justify-center order-2 md:order-1">
          <div class="relative w-full">
            <img 
              id="modal-certificate-image" 
              src="/placeholder.svg" 
              alt="Certificado" 
              class="max-w-full max-h-[50vh] md:max-h-[60vh] object-contain mx-auto"
            />
            
            <!-- Controles de zoom -->
            <div class="absolute bottom-2 right-2 flex bg-[#1B262C]/80 backdrop-blur-sm rounded-lg p-1 zoom-controls">
              <button id="zoom-in" class="text-[#BBE1FA] hover:text-white p-1 rounded-full hover:bg-[#3282B8]/30 transition-colors duration-200" aria-label="Acercar">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="11" cy="11" r="8"></circle>
                  <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                  <line x1="11" y1="8" x2="11" y2="14"></line>
                  <line x1="8" y1="11" x2="14" y2="11"></line>
                </svg>
              </button>
              <button id="zoom-out" class="text-[#BBE1FA] hover:text-white p-1 rounded-full hover:bg-[#3282B8]/30 transition-colors duration-200" aria-label="Alejar">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="11" cy="11" r="8"></circle>
                  <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                  <line x1="8" y1="11" x2="14" y2="11"></line>
                </svg>
              </button>
              <button id="zoom-reset" class="text-[#BBE1FA] hover:text-white p-1 rounded-full hover:bg-[#3282B8]/30 transition-colors duration-200" aria-label="Restablecer zoom">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M3 12a9 9 0 1 0 18 0 9 9 0 0 0-18 0"></path>
                  <path d="M14 8H9v6h5"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
        
        <!-- Detalles del certificado -->
        <div class="flex flex-col order-1 md:order-2">
          <!-- Información del emisor y fecha (solo visible en móvil) -->
          <div class="flex justify-between items-center mb-4 md:hidden">
            <p id="mobile-certificate-issuer" class="text-[#BBE1FA] font-medium">Emisor</p>
            <span id="mobile-certificate-date" class="bg-[#3282B8] text-[#BBE1FA] text-xs px-2 py-1 rounded">Fecha</span>
          </div>
          
          <!-- Información del emisor (solo visible en desktop) -->
          <div class="hidden md:block mb-4">
            <div class="flex items-center gap-2">
              <div class="bg-[#3282B8]/20 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#3282B8]">
                  <path d="M22 10v6M2 10l10-5 10 5-10 5z"></path>
                  <path d="M6 12v5c3 3 9 3 12 0v-5"></path>
                </svg>
              </div>
              <div>
                <p class="text-[#BBE1FA]/60 text-sm">Emitido por</p>
                <p id="desktop-certificate-issuer" class="text-[#BBE1FA] font-medium">Emisor</p>
              </div>
            </div>
          </div>
          
          <!-- Descripción -->
          <div class="bg-[#1B262C]/50 rounded-lg p-4 mb-6">
            <h4 class="text-[#BBE1FA] font-medium mb-2 flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#3282B8]">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
              Descripción
            </h4>
            <p id="modal-certificate-description" class="text-[#BBE1FA]/80 text-sm md:text-base">Descripción del certificado</p>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .modal-content {
    transform: scale(0.95);
    opacity: 0;
    transition: all 0.3s ease-in-out;
  }
  
  .modal-active {
    opacity: 1;
    transform: scale(1);
  }
  
  /* Estilos para la imagen del certificado */
  #modal-certificate-image {
    transition: transform 0.3s ease;
  }
  
  /* Estilos para el contenedor de la imagen con zoom */
  .certificate-image-container {
    position: relative;
    overflow: hidden;
  }
  
  /* Estilos para dispositivos táctiles */
  @media (hover: none) {
    .zoom-controls {
      opacity: 0.8;
    }
  }
  
  /* Estilos para dispositivos no táctiles */
  @media (hover: hover) {
    .zoom-controls {
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .certificate-image-container:hover .zoom-controls {
      opacity: 0.8;
    }
  }
  
  /* Estilos para dispositivos móviles */
  @media (max-width: 768px) {
    .modal-content {
      max-height: 90vh;
    }
    
    #modal-certificate-image {
      max-height: 40vh;
    }
  }
</style>

