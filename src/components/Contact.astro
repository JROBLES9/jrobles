---
import MailIcon from "./MailIcon.astro";
---

<section
  id="contacto"
  class="section-padding bg-gradient-to-b from-[#0F4C75] to-[#1B262C]"
>
  <div class="container-custom">
    <h2 class="section-title text-center">Contacto</h2>
    <p class="text-center text-[#BBE1FA]/80 max-w-3xl mx-auto mb-12">
      ¿Interesado en trabajar juntos? Contáctame directamente a través de
      cualquiera de estos medios.
    </p>

    <div class="max-w-4xl mx-auto">
      <!-- Tarjeta principal de contacto -->
      <div
        class="bg-gradient-to-br from-[#1B262C] to-[#0F4C75] rounded-xl shadow-xl p-6 md:p-8 mb-12 transform transition-all duration-500 hover:shadow-2xl hover:shadow-[#3282B8]/20"
      >
        <div class="flex flex-col md:flex-row items-center gap-6 md:gap-10">
          <!-- Icono de correo animado -->
          <div
            class="bg-[#3282B8]/20 p-5 rounded-full flex-shrink-0 pulse-animation"
          >
            <MailIcon className="w-12 h-12 text-[#3282B8]" />
          </div>

          <!-- Información de contacto rápido -->
          <div class="flex-grow text-center md:text-left">
            <h3 class="text-2xl font-bold text-[#BBE1FA] mb-2">
              Contáctame Directamente
            </h3>

            <!-- Botón de correo con funcionalidad de copiar -->
            <button
              id="copyEmailBtn"
              class="inline-flex items-center justify-center gap-2 bg-[#3282B8] hover:bg-[#3282B8]/80 text-[#BBE1FA] py-3 px-6 rounded-lg transition-all duration-300 group relative overflow-hidden"
              data-email="gonzalezroblesruben@gmail.com"
              aria-label="Copiar correo electrónico al portapapeles"
            >
              <span class="relative z-10 flex items-center gap-2">
                <span id="emailText">gonzalezroblesruben@gmail.com</span>
              </span>
              <span
                class="absolute inset-0 bg-[#0F4C75] transform scale-x-0 origin-left transition-transform duration-300 group-hover:scale-x-100"
              ></span>
            </button>

            <!-- Notificación de copiado (oculta por defecto) -->
            <div
              id="copyNotification"
              class="fixed bottom-4 right-4 bg-[#3282B8] text-[#BBE1FA] py-2 px-4 rounded-lg shadow-lg flex items-center gap-2 opacity-0 transform translate-y-10 transition-all duration-300 z-50"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-5 h-5 text-[#3282B8]"></svg>
              <span>¡Correo copiado al portapapeles!</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Tarjetas de información de contacto -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div
          class="bg-[#1B262C] rounded-lg p-6 flex flex-col items-center text-center transition-all duration-300 hover:shadow-lg hover:shadow-[#3282B8]/20 hover:-translate-y-1"
        >
          <div class="bg-[#3282B8]/20 p-3 rounded-full mb-4">
            <img src="/icons/map-pin.svg" class="w-6 h-6 text-white" />
          </div>

          <h3 class="text-lg font-bold text-[#BBE1FA] mb-2">Ubicación</h3>
          <p class="text-[#BBE1FA]/80 mb-4">Totonicapán, Guatemala</p>
          <a
            target="_blank"
            href="https://wa.me/50243308290"
            class="mt-auto text-[#3282B8] hover:text-[#BBE1FA] font-medium flex items-center gap-1 transition-colors duration-300"
          >
            <span>Ubicación</span>
            <icon name="arrow-right" class="w-4 h-4"></icon>
          </a>
        </div>

        <div
          class="bg-[#1B262C] rounded-lg p-6 flex flex-col items-center text-center transition-all duration-300 hover:shadow-lg hover:shadow-[#3282B8]/20 hover:-translate-y-1"
        >
          <div class="bg-[#3282B8]/20 p-3 rounded-full mb-4">
            <img src="/icons/whatsapp.svg" class="w-6 h-6 text-[#3282B8]" />
          </div>

          <h3 class="text-lg font-bold text-[#BBE1FA] mb-2">WhatsApp</h3>
          <p class="text-[#BBE1FA]/80 mb-4">+502 4330-8290</p>
          <a
            target="_blank"
            href="https://wa.me/50243308290"
            class="mt-auto text-[#3282B8] hover:text-[#BBE1FA] font-medium flex items-center gap-1 transition-colors duration-300"
          >
            <span>WhatsApp</span>
            <icon name="arrow-right" class="w-4 h-4"></icon>
          </a>
        </div>
      </div>

      <!-- Redes sociales -->
      <div class="mt-12 text-center">
        <h3 class="text-xl font-bold text-[#BBE1FA] mb-6">
          Puedes ver mi github
        </h3>
        <div class="flex justify-center gap-4">
          <a
            href="https://github.com/JROBLES9"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-[#1B262C] hover:bg-[#3282B8]/20 text-[#BBE1FA] p-3 rounded-full transition-all duration-300 hover:scale-110 group"
            aria-label="Visitar perfil de GitHub"
          >
            <img src="/icons/github-dark.svg" alt="GitHub" class="w-6 h-6" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("astro:page-load", () => {
    const copyEmailBtn = document.getElementById("copyEmailBtn");
    const copyNotification = document.getElementById("copyNotification");
    const emailText = document.getElementById("emailText");

    if (copyEmailBtn && copyNotification) {
      // Sonido de notificación (opcional)
      const notificationSound = new Audio("/sounds/copy-sound.mp3");

      copyEmailBtn.addEventListener("click", async () => {
        const email = copyEmailBtn.getAttribute("data-email") || "";

        try {
          // Copiar al portapapeles
          await navigator.clipboard.writeText(email);

          // Cambiar texto temporalmente
          if (emailText) {
            const originalText = emailText.textContent;
            emailText.textContent = "¡Copiado!";

            setTimeout(() => {
              emailText.textContent = originalText;
            }, 2000);
          }

          // Reproducir sonido (opcional)
          try {
            notificationSound.volume = 0.5;
            notificationSound.play();
          } catch (soundError) {
            console.log("No se pudo reproducir el sonido");
          }

          // Mostrar notificación
          copyNotification.classList.remove("opacity-0", "translate-y-10");
          copyNotification.classList.add("opacity-100", "translate-y-0");

          // Ocultar notificación después de 3 segundos
          setTimeout(() => {
            copyNotification.classList.remove("opacity-100", "translate-y-0");
            copyNotification.classList.add("opacity-0", "translate-y-10");
          }, 3000);
        } catch (err) {
          console.error("Error al copiar el correo:", err);

          // Fallback para navegadores que no soportan Clipboard API
          const textArea = document.createElement("textarea");
          textArea.value = email;
          textArea.style.position = "fixed";
          textArea.style.opacity = "0";
          document.body.appendChild(textArea);
          textArea.focus();
          textArea.select();

          try {
            const successful = document.execCommand("copy");
            if (successful) {
              // Mostrar notificación
              copyNotification.classList.remove("opacity-0", "translate-y-10");
              copyNotification.classList.add("opacity-100", "translate-y-0");

              // Ocultar notificación después de 3 segundos
              setTimeout(() => {
                copyNotification.classList.remove(
                  "opacity-100",
                  "translate-y-0",
                );
                copyNotification.classList.add("opacity-0", "translate-y-10");
              }, 3000);
            }
          } catch (execErr) {
            console.error("Error al usar execCommand:", execErr);
          }

          document.body.removeChild(textArea);
        }
      });

      // Cerrar notificación al hacer clic en ella
      copyNotification.addEventListener("click", () => {
        copyNotification.classList.remove("opacity-100", "translate-y-0");
        copyNotification.classList.add("opacity-0", "translate-y-10");
      });
    }
  });
</script>

<style>
  .pulse-animation {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(50, 130, 184, 0.4);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(50, 130, 184, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(50, 130, 184, 0);
    }
  }
</style>
