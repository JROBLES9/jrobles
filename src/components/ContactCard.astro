---


interface Props {
  icon: string;
  title: string;
  content: string;
  link?: string;
  actionText?: string;
}

const { icon, title, content, link, actionText } = Astro.props;
---

<div class="bg-[#1B262C] rounded-lg p-6 flex flex-col items-center text-center transition-all duration-300 hover:shadow-lg hover:shadow-[#3282B8]/20 hover:-translate-y-1">
  <div class="bg-[#3282B8]/20 p-3 rounded-full mb-4">
    <icon name={icon} class="w-6 h-6 text-[#3282B8]" />
  </div>
  
  <h3 class="text-lg font-bold text-[#BBE1FA] mb-2">{title}</h3>
  <p class="text-[#BBE1FA]/80 mb-4">{content}</p>
  
  {link && actionText && (
    <a 
      href={link} 
      class="mt-auto text-[#3282B8] hover:text-[#BBE1FA] font-medium flex items-center gap-1 transition-colors duration-300"
    >
      <span>{actionText}</span>
      <icon name="arrow-right" class="w-4 h-4" />
    </a>
  )}
</div>

