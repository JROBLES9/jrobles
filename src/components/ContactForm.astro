<form class="bg-[#1B262C] rounded-lg p-8 shadow-lg">
  <div class="mb-6">
    <label for="name" class="block text-[#BBE1FA] font-medium mb-2">Nombre</label>
    <input 
      type="text" 
      id="name" 
      name="name" 
      required 
      class="w-full bg-[#0F4C75]/50 border border-[#3282B8]/30 rounded-md px-4 py-3 text-[#BBE1FA] focus:outline-none focus:ring-2 focus:ring-[#3282B8]"
    />
  </div>
  
  <div class="mb-6">
      focus:outline-none focus:ring-2 focus:ring-[#3282B8]"
    />
  </div>
  
  <div class="mb-6">
    <label for="email" class="block text-[#BBE1FA] font-medium mb-2">Email</label>
    <input 
      type="email" 
      id="email" 
      name="email" 
      required 
      class="w-full bg-[#0F4C75]/50 border border-[#3282B8]/30 rounded-md px-4 py-3 text-[#BBE1FA] focus:outline-none focus:ring-2 focus:ring-[#3282B8]"
    />
  </div>
  
  <div class="mb-6">
    <label for="message" class="block text-[#BBE1FA] font-medium mb-2">Mensaje</label>
    <textarea 
      id="message" 
      name="message" 
      rows="5" 
      required 
      class="w-full bg-[#0F4C75]/50 border border-[#3282B8]/30 rounded-md px-4 py-3 text-[#BBE1FA] focus:outline-none focus:ring-2 focus:ring-[#3282B8]"
    ></textarea>
  </div>
  
  <button 
    type="submit" 
    class="w-full bg-[#3282B8] hover:bg-[#0F4C75] text-[#BBE1FA] font-medium py-3 px-6 rounded-md transition-colors duration-300"
  >
    Enviar Mensaje
  </button>
</form>

