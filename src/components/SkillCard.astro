---
import type { Skill } from '../types/skill';

interface Props {
  skill: Skill;
}

const { skill } = Astro.props;
---

<div class="bg-[#0F4C75] rounded-lg p-4 flex flex-col items-center justify-center transition-transform duration-300 hover:-translate-y-2">
  <img 
    src={skill.icon || "/placeholder.svg"} 
    alt={skill.name} 
    class="h-16 w-16 object-contain mb-4"
    width="64"
    height="64"
  />
  <h3 class="text-[#BBE1FA] font-medium text-center">{skill.name}</h3>
</div>

